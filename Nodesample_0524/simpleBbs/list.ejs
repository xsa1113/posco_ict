<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h3>여기는 list.ejs입니다</h3>

    <table border = "1">
        <thead>
            <tr>
                <th>번호</th>
                <th>seq</th>
                <th>작성자</th>
                <th>제목</th>
                <th>내용</th>
                <th>작성일</th>
                <th>삭제</th>
            </tr>
        </thead>

        <tbody>

            <% data.forEach(function(item, index){ %>
                <tr>
                    <th><%=index+1%></th>
                    <td>
                        <%=item.notice_id %>
                    </td>
                    <td>
                        <%=item.writer %>
                    </td>
                    <td>
                        <a href="/detail?notice_id=<%=item.notice_id%>"><%=item.title%></a>
                    </td>
                    <td>
                        <%=item.content %>
                    </td>
                    <td>
                        <%=item.regdate %>
                    </td>
                    <td>
                        <a href="/delete?notice_id=<%=item.notice_id%>">삭제</a>
                    </td>
                </tr>

            <%  }); %>

        </tbody>

    </table>
</body>
</html>